<style type="text/css">
img, span { width: 128px; height: 128px; margin-right: 15px; border-radius: 10px; float:left; }
img[src=""] { display: none; }
span { display: none; text-align: center; font-size: 7em; }
img[src=""] + span { display: block; }
html { font-family: sans-serif; }
h1 { margin-top: 0; margin-bottom: 0.25em; font-size: 3em; }
/.status { font-size: 3em; }
</style>

.widget
  %img{:src => avatar}
  %span{:style => "color: #{foreground.css_rgb}; background-color: #{background.css_rgb};"}= initial
  %h1= name
  .status= status